<div class="container">
  <div class="columns">
    <div class="column">
      <ul>
        <% @spots.each do |s| %>
          <li><%= link_to s.name, spot_path(s) %></li>
        <% end %>
      </ul>
    </div>
    <div class="column is-one-third">
      <h2 class="subtitle has-text-weight-bold">Spot bearbeiten</h2>
      <%= form_with model: @spot do |form| %>
        <div class="field">
          <div class="control">
            <%= form.text_field :name, :class => 'input', :placeholder => "Name", :required => true %>
          </div>
        </div>
        <div class="field">
          <div class="control buttons is-right">
            <%= form.submit 'Aktualisieren', :class => 'button is-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
